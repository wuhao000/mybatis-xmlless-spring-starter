<?xml version="1.0"?>
<configuration scan="true" scanPeriod="5">
  <appender name="console"
            level="info"
            class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level %d{HH:mm:ss} at %c.%M\(%F:%L\) - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="com.aegis" level="debug"/>
  <root>
    <level value="info"/>
    <appender-ref ref="console"/>
  </root>
</configuration>
